{
  "name": "adw-tui",
  "version": "0.2.0",
  "description": "ADW - AI Developer Workflow TUI",
  "type": "module",
  "bin": {
    "adw-tui": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/cli.js --bundle --platform=node --target=node18 --outfile=bundle/cli.mjs --format=esm --external:fsevents --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "dev": "tsc --watch",
    "start": "node bundle/cli.mjs"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "meow": "^13.2.0",
    "react": "^18.3.1",
    "react-devtools-core": "^4.28.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.0"
  }
}
